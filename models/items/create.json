{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "CreateItem",
  "description": "Create an item in the store",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "price": {
      "type": "number"
    },
    "quantity": {
      "type": "integer"
    }
  },
  "required": ["name"],
  "additionalProperties": false
}
